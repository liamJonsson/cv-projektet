@model MyApp.Models.Message

<h2>Send Message</h2>

<form asp-action="Send">
    <div class="form-group">
        <label>From (Sender)</label>
        <select asp-for="SenderId" asp-items="ViewBag.Users" class="form-control"></select>
    </div>

    <div class="form-group">
        <label>To (Receiver)</label>
        <select asp-for="ReceiverId" asp-items="ViewBag.Users" class="form-control"></select>
    </div>

    <div class="form-group">
        <label>Message</label>
        <textarea asp-for="Text" class="form-control" rows="4"></textarea>
    </div>

    <br />
    <button type="submit" class="btn btn-success">Send Message</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
