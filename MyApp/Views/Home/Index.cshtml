@model IEnumerable<MyApp.Models.User>

<div class="d-flex justify-content-center" style="width: 90%; margin: 50px 0">
    <form asp-action="search" method="get">
        <label class="fs-5" for="search">Hitta användare</label>
        @* Andra border color på input fältet när man klickat i den samt ändra storleken på fältet *@
        <input class="ms-2 border-0 bg-light" style="width: 400px;" type="search" id="search" name="query" placeholder="Sök användare..." />
        @*Flytta på sökikonen*@
        <button class="ms-2 border-0" type="submit" aria-label="Sök">
            <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" fill="currentColor" class="bi bi-search" viewBox="0 0 14 14">
                <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001q.044.06.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1 1 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0" />
            </svg>
        </button>
    </form>
</div>

@foreach (var item in Model)
{
    bool isLoggedIn = User.Identity != null && User.Identity.IsAuthenticated;
    @if (isLoggedIn || item.Visibility == true)
    {
        var latestProject = item.ParticipatingProjects
            .Where(pp => pp.Project != null)
            .OrderByDescending(pp => pp.Project.StartDate)
            .FirstOrDefault();
    
        <h3 class="m-2">@item.Name</h3>
        <div class="d-flex" style="width: 90%; margin-bottom: 20px;">
            <div class="bg-light p-2" style="width: 47%; margin-right: 6%;">
                <div style="width: 96%; margin: 0 auto; overflow-wrap: break-word;">
                    <h5>CV</h5>
                    <div class="rounded h-100 d-flex flex-column">
                        <h6 class="fw-bold">Kompetenser</h6>
                        <p class="small text-muted">@item.Skills</p>

                        <div class="mt-auto w-100 py-3 border-top border-secondary"></div>

                        <h6 class="fw-bold">Utbildningar</h6>
                        <p class="small text-muted">@item.Education</p>

                        <div class="mt-auto w-100 py-3 border-top border-secondary"></div>

                        <h6 class="fw-bold">Tidigare erfarenheter</h6>
                        <p class="small text-muted">@item.Experience</p>
                    </div>
                </div>
            </div>
            <div class="bg-light p-2" style="width: 47%;">
                <div style="width: 96%; margin: 0 auto; overflow-wrap: break-word;">
                    <h5 class="text-center">Senaste projekt</h5>
                    @if (latestProject != null)
                    {
                        <div class="p-4 rounded h-100 d-flex flex-column justify-content-center align-items-center text-center">
                            <h5 class="fw-bold">@latestProject.Project.Title</h5>
                            <p class="small text-muted">@latestProject.Project.Description</p>
                            <div class="mt-auto w-100 pt-3 border-top border-secondary">
                                <span class="badge bg-secondary">@latestProject.Project.CodeLanguage</span>
                            </div>
                        </div>
                    }
                    else
                    {
                        <p>Inga projekt ännu</p>
                    }
                </div>
            </div>
        </div>
        <div style="width: 90%; text-align: right;">
            
                <a asp-controller="User"
                   asp-action="Profile"
                   asp-route-id="@item.Id"
                   class="btn btn-light">
                    Se profil
               </a>
            
        </div>
    }
}

