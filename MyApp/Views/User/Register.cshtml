@model MyApp.InputModels.RegisterInputModel

@{
    ViewData["Title"] = "Registrera profil";
}

<div class="container mt-5" style="max-width: 800px;">
    <h2 class="text-center mb-5">Registrera profil</h2>

    <form asp-action="Register" method="post">
        
        <div class="row mb-3 align-items-center">
            <label class="col-md-3 col-form-label">Namn*</label>
            <div class="col-md-9">
                <input asp-for="Name" class="form-control bg-light border-0" />
                <span asp-validation-for="Name" class="text-danger small"></span>
            </div>
        </div>
        <div class="row mb-3 align-items-center">
            <label class="col-md-3 col-form-label">Telefonnummer*</label>
            <div class="col-md-9">
                <input asp-for="PhoneNumber" class="form-control bg-light border-0" />
                <span asp-validation-for="PhoneNumber" class="text-danger small"></span>
            </div>
        </div>
        <div class="row mb-3 align-items-center">
            <label class="col-md-3 col-form-label">Mailadress*</label>
            <div class="col-md-9">
                <input asp-for="Email" type="email" class="form-control bg-light border-0" />
                <span asp-validation-for="Email" class="text-danger small"></span>
            </div>
        </div>
        <div class="row mb-3 align-items-center">
            <label class="col-md-3 col-form-label">Adress*</label>
            <div class="col-md-9">
                <input asp-for="HomeAddress" class="form-control bg-light border-0" />
                <span asp-validation-for="HomeAddress" class="text-danger small"></span>
            </div>
        </div>
        <div class="row mb-3 align-items-center">
            <label class="col-md-3 col-form-label">Postnummer*</label>
            <div class="col-md-3">
                <input asp-for="ZipCode" class="form-control bg-light border-0" />
                <span asp-validation-for="ZipCode" class="text-danger small"></span>
            </div>
            <label class="col-md-1 col-form-label text-md-end">Ort*</label>
            <div class="col-md-5">
                <input asp-for="City" class="form-control bg-light border-0" />
                <span asp-validation-for="City" class="text-danger small"></span>
            </div>
        </div>
        <div class="row mb-3 align-items-center">
            <label class="col-md-3 col-form-label">Användarnamn*</label>
            <div class="col-md-9">
                <input asp-for="UserName" class="form-control bg-light border-0" />
                <span asp-validation-for="UserName" class="text-danger small"></span>
            </div>
        </div>

        <div class="row mb-3 align-items-center">
            <label class="col-md-3 col-form-label">Lösenord*</label>
            <div class="col-md-9">
                <div class="input-group">
                    <input asp-for="Password" type="password" class="form-control bg-light border-0" id="passwordInput" />
                    <button class="btn btn-light border-0" type="button" onclick="togglePassword('passwordInput')">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-eye" viewBox="0 0 16 16">
                            <path d="M16 8s-3-5.5-8-5.5S0 8 0 8s3 5.5 8 5.5S16 8 16 8zM1.173 8a13.133 13.133 0 0 1 1.66-2.043C4.12 4.668 5.88 3.5 8 3.5c2.12 0 3.879 1.168 5.168 2.457A13.133 13.133 0 0 1 14.828 8c-.058.087-.122.183-.195.288-.335.48-.83 1.12-1.465 1.755C11.879 11.332 10.119 12.5 8 12.5c-2.12 0-3.879-1.168-5.168-2.457A13.134 13.134 0 0 1 1.172 8z"/>
                            <path d="M8 5.5a2.5 2.5 0 1 0 0 5 2.5 2.5 0 0 0 0-5zM4.5 8a3.5 3.5 0 1 1 7 0 3.5 3.5 0 0 1-7 0z"/>
                        </svg>
                    </button>
                </div>
                <span asp-validation-for="Password" class="text-danger small"></span>
            </div>
        </div>

        <div class="row mb-4 align-items-center">
            <label class="col-md-3 col-form-label">Bekräfta lösenord*</label>
            <div class="col-md-9">
                <div class="input-group">
                    <input asp-for="ConfirmPassword" type="password" class="form-control bg-light border-0" id="confirmPasswordInput" />
                    <button class="btn btn-light border-0" type="button" onclick="togglePassword('confirmPasswordInput')">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-eye" viewBox="0 0 16 16">
                            <path d="M16 8s-3-5.5-8-5.5S0 8 0 8s3 5.5 8 5.5S16 8 16 8zM1.173 8a13.133 13.133 0 0 1 1.66-2.043C4.12 4.668 5.88 3.5 8 3.5c2.12 0 3.879 1.168 5.168 2.457A13.133 13.133 0 0 1 14.828 8c-.058.087-.122.183-.195.288-.335.48-.83 1.12-1.465 1.755C11.879 11.332 10.119 12.5 8 12.5c-2.12 0-3.879-1.168-5.168-2.457A13.134 13.134 0 0 1 1.172 8z"/>
                            <path d="M8 5.5a2.5 2.5 0 1 0 0 5 2.5 2.5 0 0 0 0-5zM4.5 8a3.5 3.5 0 1 1 7 0 3.5 3.5 0 0 1-7 0z"/>
                        </svg>
                    </button>
                </div>
                <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
            </div>
        </div>

        <div class="row">
            <div class="col-12 text-center">
                <button type="submit" class="btn btn-secondary px-5 py-2">Registrera profil</button>
            </div>
        </div>
    </form>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        function togglePassword(inputId) {
            var input = document.getElementById(inputId);
            if (input.type === "password") {
                input.type = "text";
            } else {
                input.type = "password";
            }
        }
    </script>
}