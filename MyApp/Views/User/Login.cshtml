@{
    ViewData["Title"] = "Logga in";
}

<div class="d-flex justify-content-center align-items-center my-5 py-5">
    <div style="width: 100%; max-width: 400px;">

        <h1 class="text-center mb-5" style="font-weight: 400;">Välkommen</h1>

        <form asp-action="Login" method="post">

            @if (ViewBag.ErrorMessage != null)
            {
                <div class="alert alert-danger text-center">
                    @ViewBag.ErrorMessage
                </div>
            }

            <div class="form-group row mb-4 align-items-center">
                <label for="username" class="col-sm-4 col-form-label" style="font-size: 1.1rem;">Användarnamn</label>
                <div class="col-sm-8">
                    <input type="text" name="username" class="form-control border-0" style="background-color: #dcdcdc; height: 45px;" required />
                </div>
            </div>

            <div class="form-group row mb-5 align-items-center">
                <label for="password" class="col-sm-4 col-form-label" style="font-size: 1.1rem;">Lösenord</label>
                <div class="col-sm-8">
                    <input type="password" name="password" class="form-control border-0" style="background-color: #dcdcdc; height: 45px;" required />
                </div>
            </div>

            <div class="d-flex justify-content-end mb-5">
                <button type="submit" class="btn px-4 py-2" style="background-color: #c0c0c0; border: none; font-size: 1.1rem;">Logga in</button>
            </div>

            <div class="text-center">
                <p style="font-style: italic;">
                    Har du inget konto? <a asp-controller="User" asp-action="Add" class="text-dark" style="text-decoration: underline;">Registrera dig här</a>
                </p>
            </div>

        </form>
    </div>
</div>