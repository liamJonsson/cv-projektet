@using Microsoft.AspNetCore.Identity
@using MyApp.Models
@inject UserManager<User> UserManager
@model MyApp.Models.User

@{
    var loggedInId = UserManager.GetUserId(User);
    var isOwner = loggedInId == Model.Id.ToString();
    ViewData["Title"] = isOwner ? "Min Profil" : Model.Name;
}

<div class="container mt-5">
    <div class="d-flex justify-content-center align-items-center mb-4 position-relative">
        <h2>@(isOwner ? "Mina Uppgifter" : "Profil")</h2>
        @if (isOwner)
        {
            <a asp-action="EditProfile" class="btn btn-outline-secondary btn-sm position-absolute end-0">
                <i class="bi bi-pencil"></i> Redigera
            </a>
        }
    </div>
    <div class="row">
        <div class="col-md-6">
            <div class="mb-3 row">
                <label class="col-sm-4 fw-bold">Namn</label>
                <div class="col-sm-8 py-2 rounded" style="background-color: #dcdcdc;">@Model.Name</div>
            </div>
            <div class="mb-3 row">
                <label class="col-sm-4 fw-bold">Telefonnummer</label>
                <div class="col-sm-8 py-2 rounded" style="background-color: #dcdcdc;">@Model.PhoneNumber</div>
            </div>
            <div class="mb-3 row">
                <label class="col-sm-4 fw-bold">Mailadress</label>
                <div class="col-sm-8 py-2 rounded" style="background-color: #dcdcdc;">@Model.Email</div>
            </div>
            <div class="mb-3 row">
                <label class="col-sm-4 fw-bold">Adress</label>
                <div class="col-sm-8 py-2 rounded" style="background-color: #dcdcdc;">@Model.Address?.HomeAddress</div>
            </div>
            <div class="mb-3 row">
                <label class="col-sm-4 fw-bold">Postnummer</label>
                <div class="col-sm-8 py-2 rounded" style="background-color: #dcdcdc;">@Model.Address?.ZipCode</div>
            </div>
            <div class="mb-3 row">
                <label class="col-sm-4 fw-bold">Ort</label>
                <div class="col-sm-8 py-2 rounded" style="background-color: #dcdcdc;">@Model.Address?.City</div>
            </div>
        </div>
        <div class="col-md-6 d-flex justify-content-center align-items-start">
            <div style="width: 300px; height: 300px; background-color: #6c6c6c; overflow: hidden;" class="rounded shadow-sm">
                @{
                    var profilePicName = string.IsNullOrEmpty(Model.ProfileImage) ? "default.jpg" : Model.ProfileImage;
                }
                <img src="~/images/@profilePicName" style="width: 100%; height: 100%; object-fit: cover;" alt="Profilbild" />
            </div>
        </div>
    </div>
    <h3 class="text-center mt-5 mb-4">CV</h3>
    <div class="p-4 rounded" style="background-color: #dcdcdc;">
        <div class="row">
            <div class="col-md-4 d-flex flex-column">
                <h5 class="fw-bold">Kompetenser</h5>
                <p class="flex-grow-1">@(Model.Skills ?? "Inga kompetenser angivna.")</p>
            </div>
            <div class="col-md-4">
                <h5 class="fw-bold">Utbildning</h5>
                <p>@(Model.Education ?? "Ingen utbildning angiven.")</p>
            </div>
            <div class="col-md-4">
                <h5 class="fw-bold">Tidigare erfarenhet</h5>
                <p>@(Model.Experience ?? "Ingen erfarenhet angiven.")</p>
            </div>
        </div>
        <div class="mt-3 d-flex justify-content-end">
            <div class="rounded-circle overflow-hidden shadow-sm" style="width: 80px; height: 80px; background-color: #6c6c6c;">
                @if (!string.IsNullOrEmpty(Model.CvImage))
                {
                    <img src="~/images/@Model.CvImage" style="width: 100%; height: 100%; object-fit: cover;" alt="CV Bild" />
                }
            </div>
        </div>
    </div>
    <h3 class="text-center mt-5 mb-4">Projekt</h3>
    <div class="row">
        @if (Model.ParticipatingProjects != null && Model.ParticipatingProjects.Any())
        {
            @foreach (var projUser in Model.ParticipatingProjects)
            {
                <div class="col-md-6 mb-4">
                    <div class="p-4 rounded h-100 d-flex flex-column justify-content-center align-items-center text-center" style="background-color: #dcdcdc;">
                        <h5 class="fw-bold">@projUser.Project.Title</h5>
                        <p class="small text-muted">@projUser.Project.Description</p>
                        <div class="mt-auto w-100 pt-3 border-top border-secondary">
                            <span class="badge bg-secondary">@projUser.Project.CodeLanguage</span>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12 text-center text-muted fst-italic">Inga projekt kopplade ännu.</div>
        }
    </div>
    <div class="row mt-5 justify-content-center">
        <div class="col-md-8">
            <h3 class="text-center mb-4">Skicka meddelande</h3>

            <div class="mb-3">
                <label>Namn</label>
                <input type="text" class="form-control border-0" style="background-color: #dcdcdc;"
                       value="@(User.Identity.IsAuthenticated? User.Identity.Name : "")"
                       placeholder="Ditt namn" disabled="@(User.Identity.IsAuthenticated)" />
            </div>
            <div class="mb-3">
                <label>Meddelande</label>
                <textarea class="form-control border-0" rows="5" style="background-color: #dcdcdc;"></textarea>
            </div>
            <div class="text-end">
                <button class="btn btn-secondary disabled">Skicka</button>
            </div>
        </div>
    </div>
    <div class="mt-5 mb-5 text-center">
        <button class="btn btn-secondary px-4 py-2">Exportera profil</button>
    </div>
</div>