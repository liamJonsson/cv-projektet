@model MyApp.Models.User
<h2>Create User</h2>
@* Ändra för att den ska inte se ut såhär *@
<form asp-action="Add" method="post">
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label>Full Name</label>
                <input asp-for="Name" class="form-control" />
            </div>
            <div class="form-group">
                <label>Email</label>
                <input asp-for="Email" type="email" class="form-control" />
            </div>
            <div class="form-group">
                <label>Phone</label>
                <input asp-for="PhoneNumber" class="form-control" />
            </div>
            <div class="form-group">
                <label>Address</label>
                <select asp-for="AddressId" class="form-control" asp-items="ViewBag.Addresses"></select>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label>Username</label>
                <input asp-for="UserName" class="form-control" />
            </div>
            <div class="form-group">
                <label>Password</label>
                <input asp-for="Password" type="password" class="form-control" />
            </div>
            <div class="form-group">
                <label>CV Filename</label>
                <input asp-for="Cv" class="form-control" />
            </div>
            <div class="form-check mt-3">
                <input asp-for="Deactivated" class="form-check-input" />
                <label class="form-check-label">Activated</label>
            </div>
        </div>
    </div>
    <br />
    <button type="submit" class="btn btn-success">Save User</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>