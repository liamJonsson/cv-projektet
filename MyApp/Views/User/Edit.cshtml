@model MyApp.Models.User

<h2>Edit User</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label>Full Name</label>
        <input asp-for="Name" class="form-control" />
    </div>

    <div class="form-group">
        <label>Email</label>
        <input asp-for="Email" class="form-control" />
    </div>

    <div class="form-group">
        <label>Phone Number</label>
        <input asp-for="PhoneNumber" class="form-control" />
    </div>

    <div class="form-group">
        <label>Address</label>
        <select asp-for="AddressId" class="form-control" asp-items="ViewBag.Addresses"></select>
    </div>

    <div class="form-group">
        <label>CV Filename</label>
        <input asp-for="Cv" class="form-control" />
    </div>

    <div class="form-check mt-3">
        <input asp-for="Visibility" class="form-check-input" />
        <label class="form-check-label">Visible Profile</label>
    </div>

    <div class="form-check">
        <input asp-for="Deactivated" class="form-check-input" />
        <label class="form-check-label">Account Activated</label>
    </div>

    <br />
    <button type="submit" class="btn btn-primary">Save Changes</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
