@model MyApp.Models.Project

<h2>Add Project</h2>

<form asp-action="Add" method="post">
    <div class="form-group">
        <label>Title</label>
        <input asp-for="Title" class="form-control" required />
    </div>

    <div class="form-group">
        <label>Description</label>
        <textarea asp-for="Description" class="form-control" rows="3"></textarea>
    </div>

    <div class="form-group">
        <label>Code Language</label>
        <input asp-for="CodeLanguage" class="form-control" />
    </div>

    <div class="form-group">
        <label>Zip Filename</label>
        <input asp-for="ZipFile" class="form-control" />
    </div>

    <div class="form-group">
        <label>Creator</label>
        <select asp-for="CreatorId" class="form-control" asp-items="ViewBag.Creators"></select>
    </div>

    <br />
    <button type="submit" class="btn btn-success">Save Project</button>
    <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>